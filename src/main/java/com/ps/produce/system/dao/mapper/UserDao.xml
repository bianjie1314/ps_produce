	<!-- 更新用户 -->
	<update id="update">
		UPDATE sys_user SET 
			office_id = #{office.id}, 
			username = #{username}, 			
			no = #{no}, 
			email = #{email}, 
			phone = #{phone}, 
			update_date = #{updateDate}, 
			remarks = #{remarks}
		WHERE id = #{id}
	</update>
	
		<!-- 更新密码 -->
	<update id="updatePassword">
		UPDATE sys_user SET 
			password = #{password}, 
			salt = #{salt}
		WHERE id = #{id}
	</update>
	<!-- 更新用户 -->
	<update id="saveOSInfo">
		UPDATE sys_user SET 
			office_id = #{office.id}, 
			os_username = #{osUsername},
			os_user_id = #{osUserId}
		WHERE id = #{id}
	</update>
	
	
	
	<update id="deleteUserRole">
		delete from sys_user_role where user_id=#{id}
	</update>
	
	<insert id="insertUserRole">
		insert into sys_user_role (user_id,role_id) 
		values
		<foreach collection="roleList" item="role" separator=",">
			(#{id},#{role.id})
		</foreach>
	</insert>
	<!-- 插入用户 -->
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO sys_user(
		
			username,
			password, 
			salt,
			no, 
			email, 
			phone, 
			create_date, 
			update_date, 
			remarks, 
			del_flag
		) VALUES (	
			#{username}, 
			#{password}, 
			#{salt}, 
			#{no}, 
			#{email}, 
			#{phone}, 
			#{createDate}, 
			#{updateDate}, 
			#{remarks}, 
			#{delFlag}
		)
	</insert>
	<update id="deleteBatch">
		update sys_user set del_flag=#{delFlag} where
		id in
		<foreach collection="ids" item="id" open="(" close=")" separator=",">
			#{id}
		</foreach>
	</update>
	<select id="getById" resultType="com.ps.produce.system.entity.User">
		select * from sys_user where id=#{id}
		
	</select>
	<select id="getUserAll" resultType="com.ps.produce.system.entity.User">
		select * from sys_user where 1=1
		<if test="username!=null and username!=''">
			and username like CONCAT('%', #{username}, '%')
		</if>
	</select>
</mapper>